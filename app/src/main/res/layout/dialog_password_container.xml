<?xml version="1.0" encoding="utf-8"?>

<layout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_bottom_sheet">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_password_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"/>

        <View
            android:id="@+id/v_password_container_line"
            android:layout_width="@dimen/dp50w"
            android:layout_height="@dimen/dp4h"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp8w"
            android:background="@color/colorLightGrey" />


        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fcv_password_host_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_below="@+id/tb_password_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </RelativeLayout>


</layout>