<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- user image container-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp16w"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <!-- user image -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_profile_user_image"
                        android:layout_width="@dimen/dp80w"
                        android:layout_height="@dimen/dp80h"
                        android:layout_gravity="center"
                        card_view:cardCornerRadius="155dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_user"
                            tools:ignore="ContentDescription" />

                    </androidx.cardview.widget.CardView>
                    <!-- edit image button-->
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/dp33w"
                        android:layout_height="@dimen/dp33h"
                        android:layout_alignEnd="@+id/cv_profile_user_image"
                        android:layout_alignBottom="@+id/cv_profile_user_image"
                        android:layout_gravity="center"
                        card_view:cardCornerRadius="155dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorBlack"
                            android:padding="@dimen/dp8w"
                            android:src="@drawable/ic_camera"
                            tools:ignore="ContentDescription" />

                    </androidx.cardview.widget.CardView>


                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp8w"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:gravity="center"
                    android:text="@string/profile_photo_hint"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/sp15" />

            </LinearLayout>

            <!-- line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp2h"
                android:alpha="0.1"
                android:background="@color/colorBlack" />

            <!-- user details container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp16w"
                android:orientation="vertical">

                <!-- name title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:gravity="start"
                    android:text="@string/profile_name_title"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/sp15" />
                <!-- edit name -->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginTop="@dimen/dp8w"
                    android:background="@drawable/shape_gray"
                    android:drawablePadding="@dimen/dp16w"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:gravity="start|center"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:padding="@dimen/dp16w"
                    android:text="@string/profile_name"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp16"
                    tools:ignore="LabelFor" />
                <!-- email title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/dp16w"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:gravity="start"
                    android:text="@string/profile_email_title"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/sp15" />
                <!-- edit email -->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginTop="@dimen/dp8w"
                    android:background="@drawable/shape_gray"
                    android:drawablePadding="@dimen/dp16w"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:gravity="start|center"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:padding="@dimen/dp16w"
                    android:text="@string/profile_email"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp16"
                    tools:ignore="LabelFor" />
                <!-- phone title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/dp16w"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:gravity="start"
                    android:text="@string/profile_phone_title"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/sp15" />
                <!-- phone container-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8w"
                    android:background="@drawable/shape_gray"
                    android:orientation="horizontal">

                    <!-- phone code -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.3"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:gravity="center"
                        android:padding="@dimen/dp8w"
                        android:text="@string/profile_phone_code"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp16"
                        card_view:drawableEndCompat="@drawable/ic_arrow_down" />
                    <!-- line -->
                    <View
                        android:layout_width="@dimen/dp2w"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp8w"
                        android:layout_marginBottom="@dimen/dp8w"
                        android:alpha="0.2"
                        android:background="@color/colorGrey" />
                    <!-- phone text -->
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:gravity="center"
                        android:hint="@string/profile_phone"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:padding="@dimen/dp16w"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp16"
                        tools:ignore="LabelFor" />

                </LinearLayout>
                <!-- gender title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/dp16w"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:gravity="start"
                    android:text="@string/profile_gender_title"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/sp15" />
                <!-- gender container-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8w"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginEnd="@dimen/dp8w"
                        android:layout_weight="1"
                        android:background="@drawable/shape_gray"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:gravity="start|center"
                        android:padding="@dimen/dp8w"
                        android:text="@string/profile_gender_male"
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/sp16"
                        card_view:drawableStartCompat="@drawable/ic_male" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dp8w"
                        android:layout_weight="1"
                        android:background="@drawable/shape_gray"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:gravity="start|center"
                        android:padding="@dimen/dp8w"
                        android:text="@string/profile_gender_female"
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/sp16"
                        card_view:drawableStartCompat="@drawable/ic_female" />

                </LinearLayout>
                <!-- save changes-->
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40h"
                    android:layout_marginStart="@dimen/dp8w"
                    android:layout_marginTop="@dimen/dp16h"
                    android:layout_marginEnd="@dimen/dp8w"
                    android:layout_marginBottom="@dimen/dp16w"
                    android:background="@drawable/shape_green"
                    android:text="@string/profile_save"
                    android:textAllCaps="false"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp16" />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</layout>