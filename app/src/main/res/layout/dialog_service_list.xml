<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

        <variable
            name="serviceListener"
            type="com.app.newislam.ui.home.services.ServiceListViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/center_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorWhite"
            app:elevation="0dp"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="@dimen/dp16w"
                    android:layout_height="@dimen/dp16h"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp16w"
                    android:onClick="@{()->serviceListener.onBackClicked()}"
                    android:src="@drawable/ic_arrow_left_solid"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="@string/islamic_centers_title"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp17" />

            </RelativeLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50h"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/sv_centers"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp16w"
                android:layout_weight="1"
                android:layout_gravity="start|center"
                android:gravity="start|center"
                android:singleLine="true"
                android:inputType="text"
                android:textSize="@dimen/sp15"
                android:background="@drawable/shape_gray"
                android:drawableStart="@drawable/item_search"
                android:hint="@string/service_list_search_hint"
                android:paddingStart="@dimen/dp8w"
                android:paddingEnd="@dimen/dp8w"
                android:importantForAutofill="no" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp16w"
                android:layout_marginEnd="@dimen/dp16w"
                android:background="@drawable/shape_green_opacity"
                android:src="@drawable/ic_map_marker"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_centers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="@dimen/dp22h"
            tools:listitem="@layout/item_service" />
    </LinearLayout>
</layout>