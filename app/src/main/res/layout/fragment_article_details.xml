<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.app.newislam.ui.home.articles.details.ArticleDetailsViewModel" />

        <variable
            name="centerDetails"
            type="com.app.newislam.model.requests.home.articles.ArticleDetailsResponse" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/center_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorWhite"
            app:elevation="0dp"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="@dimen/dp15w"
                    android:layout_height="@dimen/dp15h"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp16w"
                    android:onClick="@{()->viewModel.closeArticleDetailsSheet()}"
                    android:src="@drawable/ic_arrow_left_solid" />

                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="@dimen/dp20w"
                    android:layout_height="@dimen/dp20h"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp8w"
                    android:layout_marginEnd="@dimen/dp4w"
                    android:layout_toStartOf="@+id/iv_favorite"
                    android:src="@drawable/ic_share" />

                <ImageView
                    android:id="@+id/iv_favorite"
                    android:layout_width="@dimen/dp20w"
                    android:layout_height="@dimen/dp20h"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp8w"
                    android:layout_marginEnd="@dimen/dp16w"
                    android:src="@drawable/ic_favorite" />


            </RelativeLayout>


        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv_center_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/iv_article"
                    bind:image="@{centerDetails.image}"
                    bind:placeholder="@{@drawable/ic_logo_green}"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp150h"
                    android:layout_marginTop="@dimen/dp10h"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@tools:sample/backgrounds/scenic[11]" />
                <TextView
                    android:id="@+id/tv_article_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp16w"
                    android:layout_marginTop="@dimen/dp8h"
                    android:layout_marginEnd="@dimen/dp16w"
                    android:drawablePadding="@dimen/dp8w"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:text='@{centerDetails.date}'
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp12"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_islamic_center_name"
                    tools:text="Friday, 28 Sep 2020" />
                <TextView
                    android:id="@+id/tv_article_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp16w"
                    android:layout_marginTop="@dimen/dp2h"
                    android:layout_marginEnd="@dimen/dp16w"
                    android:fontFamily="@font/montserrat_bold"
                    android:text='@{centerDetails.title??""}'
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp16"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_islamic_center"
                    tools:text="Islam Religion is the truth" />

                <TextView
                    android:id="@+id/tv_article_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp16h"
                    android:layout_marginTop="@dimen/dp6h"
                    android:layout_marginEnd="@dimen/dp16h"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:text='@{centerDetails.content??""}'
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/sp10"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_about"
                    tools:text="There are many variations of passages of Lorem Ipsum available, but the majority have suffered alteration in some form, by injected humour, or randomised words. If you are going to use a passage of Lorem Ipsum, you need to be sure there isn't anything embarrassing hidden in the middle of text. All the Lorem Ipsum generators on the Internet tend to repeat predefined chunks as necessary. making this the first true generator on the Internet. It uses a dictionary of over 200 Latin words, combined with a handful." />


                <View
                    android:id="@+id/view"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp50h"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>