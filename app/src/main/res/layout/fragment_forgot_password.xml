<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="viewModel"
            type="com.app.newislam.ui.auth.password.ForgotPasswordViewModel" />
        <variable
            name="forgotPassRequest"
            type="com.app.newislam.model.requests.auth.password.ForgetPasswordRequest" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_enter_mail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp24h"
            android:layout_marginTop="@dimen/dp45h"
            android:layout_marginEnd="@dimen/dp24h"
            android:text="@string/forget_please_enter_your_email_address_to_rese_nyour_password"
            android:textColor="#777777"
            android:textSize="@dimen/sp14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp24h"
            android:layout_marginTop="@dimen/dp45h"
            android:text="@string/forget_email_address"
            android:textColor="#000"
            android:textSize="@dimen/sp14"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_enter_mail" />



        <com.google.android.material.textfield.TextInputLayout
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_email"
            android:layout_marginStart="@dimen/dp24w"
            android:layout_marginEnd="@dimen/dp24w"
            android:layout_marginTop="@dimen/dp8w"
            android:layout_width="match_parent"
            android:id="@id/et_email"
            android:layout_height="@dimen/dp50h"
            android:textColorHint="@color/colorBlackTransparent"
            app:error="@{forgotPassRequest.passwordError.emailError}"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:background="@drawable/bg_text_input"
                android:paddingStart="@dimen/dp8w"
                android:paddingEnd="@dimen/dp8w"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/forget_email_address"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:text="@={forgotPassRequest.email}"
                android:textColor="@color/colorBlack" />

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/btn_send_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40h"
            android:layout_marginStart="@dimen/dp24h"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="@dimen/dp24h"
            android:background="@drawable/bg_button_password"
            android:text="@string/forget_send"
            android:onClick="@{()->viewModel.forgetPassword(forgotPassRequest)}"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="@dimen/sp14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_email" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>