<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_enter_mail"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:layout_marginTop="@dimen/dp45h"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dp24h"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/forget_please_enter_your_email_address_to_rese_nyour_password"
        android:textSize="@dimen/sp14"
        android:textColor="#777777"
        android:layout_width="0dp"
        android:layout_marginEnd="@dimen/dp24h"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_email"
        app:layout_constraintTop_toBottomOf="@+id/tv_enter_mail"
        android:layout_marginTop="@dimen/dp45h"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dp24h"
        android:text="@string/forget_email_address"
        android:textStyle="bold"
        android:textSize="@dimen/sp14"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        app:layout_constraintTop_toBottomOf="@+id/tv_email"
        android:layout_marginStart="@dimen/dp24h"
        android:layout_marginTop="8dp"
        android:textSize="@dimen/sp14"
        android:hint="@string/forget_enter_your_email"
        android:padding="@dimen/dp8h"
        android:layout_marginEnd="@dimen/dp24h"
        android:id="@+id/et_email"
        android:background="@drawable/bg_text_input"
        android:layout_width="match_parent"
        android:maxLines="1"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="@dimen/dp40h"/>



    <Button
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/dp24h"
        android:textColor="#fff"
        android:textSize="@dimen/sp14"
        android:text="@string/forget_send"
        android:id="@+id/btn_send_email"
        android:textAllCaps="false"
        android:layout_marginEnd="@dimen/dp24h"
        android:background="@drawable/bg_button_password"
        app:layout_constraintTop_toBottomOf="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40h"/>

</androidx.constraintlayout.widget.ConstraintLayout>