<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_email_address"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:layout_marginTop="@dimen/dp45h"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dp24h"
        android:text="@string/login_email_address"
        android:textSize="@dimen/sp14"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        app:layout_constraintTop_toBottomOf="@+id/tv_email_address"
        android:layout_marginStart="@dimen/dp24h"
        android:layout_marginTop="@dimen/dp8h"
        android:textSize="@dimen/sp12"
        android:hint="@string/login_enter_your_email"
        android:padding="8dp"
        android:id="@+id/et_email"
        android:background="@drawable/bg_text_input"
        android:layout_width="match_parent"
        android:maxLines="1"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="@dimen/dp40h"/>


    <TextView
        android:id="@+id/tv_password"
        app:layout_constraintTop_toBottomOf="@+id/et_email"
        android:layout_marginTop="@dimen/dp24h"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dp24h"
        android:text="@string/login_enter_password"
        android:textSize="@dimen/sp14"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        app:layout_constraintTop_toBottomOf="@+id/tv_password"
        android:layout_marginStart="@dimen/dp24h"
        android:layout_marginTop="@dimen/dp8h"
        android:textSize="@dimen/sp12"
        android:hint="@string/login_enter_your_password"
        android:padding="8dp"
        android:id="@+id/et_confirm_password"
        android:background="@drawable/bg_text_input"
        android:layout_width="match_parent"
        android:maxLines="1"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="@dimen/dp40h"/>

    <TextView
        android:id="@+id/tv_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_forgot_password"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginEnd="@dimen/dp24h"
        android:layout_marginTop="@dimen/dp20h"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_confirm_password" />

    <Button
        android:layout_marginTop="@dimen/dp20h"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/dp24h"
        android:textColor="#fff"
        android:id="@+id/btn_login"
        android:textSize="16sp"
        android:text="@string/login_login"
        android:textAllCaps="false"
        android:layout_marginEnd="@dimen/dp24h"
        android:background="@drawable/bg_button_password"
        app:layout_constraintTop_toBottomOf="@+id/tv_forgot_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40h"/>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/layout_ask_register"
        app:layout_constraintTop_toBottomOf="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp24h"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000"
            android:layout_marginEnd="@dimen/dp2h"
            android:textSize="@dimen/sp14"
            android:layout_width="wrap_content"
            android:text="@string/login_don_t_have_an_account"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#37B34A"
            android:textSize="@dimen/sp14"
            android:layout_width="wrap_content"
            android:text="@string/login_register"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>