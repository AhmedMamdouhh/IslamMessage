<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">
    <data>
        <variable
            name="center"
            type="com.app.newislam.model.requests.home.centers.Centers" />

        <variable
            name="adapter"
            type="com.app.newislam.ui.home.centers.CentersAdapter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_islamic_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{()-> adapter.centerClicked(center)}"
        android:layout_marginStart="@dimen/dp16w"
        android:layout_marginEnd="@dimen/dp13w">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_islamic_center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp160h"
            app:cardBackgroundColor="@null"
            app:cardCornerRadius="@dimen/dp8w"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_islamic_center"
                bind:image="@{center.image}"
                bind:placeholder="@{@drawable/ic_logo_green}"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_islamic_center_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp8h"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp16"
            android:text="@{center.name.trim()}"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_islamic_center"
            tool:text="West London Islamic center" />

        <TextView
            android:id="@+id/tv_islamic_center_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp2h"
            android:textColor="@color/colorGrey"
            android:text='@{center.city ??  "," + center.country ?? ""}'
            android:textSize="@dimen/sp13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_islamic_center_name"
            tool:text="England, London city" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
