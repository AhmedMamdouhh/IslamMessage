<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.app.newislam.ui.profile.language.LanguagesViewModel" />

        <variable
            name="language"
            type="com.app.newislam.model.entities.home.LanguageResponse" />
    </data>

    <TextView
        android:id="@+id/tv_language_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp12h"
        android:fontFamily="@font/montserrat_bold"
        android:onClick="@{()->viewModel.onLanguageItemClicked(language)}"
        android:padding="@dimen/dp10w"
        android:text='@{language.languageName??""}'
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sp17"
        tools:text="Arabic" />

</layout>
